---
// Layout principal de la aplicaci√≥n
import Navbar from '../components/Navbar.astro';

interface Props {
  title: string;
  description?: string;
  showNavbar?: boolean;
}

const { title, description = "Registro de eventos juveniles", showNavbar = true } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} - Paroikiapp</title>
    <style is:global>
      :root {
        --color-primary: #3b82f6;
        --color-secondary: #10b981;
        --color-danger: #ef4444;
        --color-gray-light: #f3f4f6;
        --color-gray-dark: #1f2937;
        --bg-page: #f9fafb;
        --text-main: #1f2937;
        --surface: #ffffff;
        --border-main: #e5e7eb;
      }

      :root[data-theme='dark'] {
        --color-gray-light: #1f2937;
        --color-gray-dark: #f3f4f6;
        --bg-page: #0f172a;
        --text-main: #e5e7eb;
        --surface: #111827;
        --border-main: #374151;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        color: var(--text-main);
        background-color: var(--bg-page);
        line-height: 1.6;
        transition: background-color 0.2s ease, color 0.2s ease;
      }

      a {
        color: var(--color-primary);
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      button {
        background-color: var(--color-primary);
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 0.375rem;
        cursor: pointer;
        font-size: 1rem;
      }

      button:hover {
        background-color: #2b5be8;
      }

      input, textarea, select {
        padding: 0.5rem;
        border: 1px solid var(--border-main);
        border-radius: 0.375rem;
        font-size: 1rem;
        background: var(--surface);
        color: var(--text-main);
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 1rem;
      }

      .error {
        color: var(--color-danger);
        background-color: #fee2e2;
        padding: 0.75rem;
        border-radius: 0.375rem;
        margin-bottom: 1rem;
      }

      .success {
        color: var(--color-secondary);
        background-color: #dcfce7;
        padding: 0.75rem;
        border-radius: 0.375rem;
        margin-bottom: 1rem;
      }
    </style>
  </head>
  <body>
    {showNavbar && <Navbar />}

    <slot />

    <script>
      // @ts-nocheck
      const savedTheme = localStorage.getItem('theme') || 'light';
      document.documentElement.setAttribute('data-theme', savedTheme);
    </script>
  </body>
</html>
