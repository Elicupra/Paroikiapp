---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Inicio">
  <!-- Hero Section -->
  <section style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 4rem 2rem; text-align: center;">
    <div style="max-width: 800px; margin: 0 auto;">
      <h1 style="font-size: 3rem; margin-bottom: 1rem; font-weight: 700;">ParoikiApp</h1>
      <p style="font-size: 1.25rem; margin-bottom: 2rem; opacity: 0.95;">Sistema de gestión de eventos juveniles - Campamentos, retiros y actividades parroquiales</p>
      <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
        <a href="/login" style="background: white; color: #667eea; padding: 1rem 2rem; border-radius: 0.5rem; text-decoration: none; font-weight: 600; display: inline-block;">
          Iniciar Sesión
        </a>
        <a href="/info-app" style="background: rgba(255,255,255,0.2); color: white; border: 2px solid white; padding: 1rem 2rem; border-radius: 0.5rem; text-decoration: none; font-weight: 600; display: inline-block;">
          Info App
        </a>
        <a href="#eventos" style="background: rgba(255,255,255,0.2); color: white; border: 2px solid white; padding: 1rem 2rem; border-radius: 0.5rem; text-decoration: none; font-weight: 600; display: inline-block;">
          Ver Eventos
        </a>
      </div>
    </div>
  </section>

  <!-- Eventos Section -->
  <section id="eventos" style="padding: 4rem 2rem; background: #f9fafb;">
    <div style="max-width: 1200px; margin: 0 auto;">
      <h2 style="text-align: center; font-size: 2rem; margin-bottom: 3rem; color: #1f2937;">Eventos Abiertos</h2>
      <div id="eventosContainer" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 2rem;">
        <!-- Se llena con JavaScript -->
      </div>
      <div id="loadingEventos" style="text-align: center; padding: 3rem;">
        <p style="color: #6b7280;">Cargando eventos...</p>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer style="background: #1f2937; color: white; padding: 2rem; text-align: center;">
    <p>&copy; 2026 ParoikiApp - Sistema de gestión de eventos juveniles</p>
  </footer>

  <script>
    const API_URL = 'http://localhost:3001';

    function formatDate(value: string | Date | null | undefined) {
      if (!value) return 'N/A';
      return new Date(value).toLocaleDateString('es-ES');
    }

    function formatPrice(value: number | string | null | undefined) {
      if (value === null || value === undefined || value === '') return null;
      return `€${Number(value).toFixed(2)}`;
    }

    function buildEventCard(evento: any) {
      const descripcion = evento.descripcion
        ? `<p style="color: #6b7280; margin-bottom: 1rem;">${evento.descripcion}</p>`
        : '';

      const inicio = evento.fecha_inicio
        ? `<div style="flex: 1; min-width: 120px;"><div style="font-size: 0.875rem; color: #9ca3af;">Inicio</div><div style="font-weight: 600; color: #1f2937;">${formatDate(evento.fecha_inicio)}</div></div>`
        : '';

      const fin = evento.fecha_fin
        ? `<div style="flex: 1; min-width: 120px;"><div style="font-size: 0.875rem; color: #9ca3af;">Fin</div><div style="font-weight: 600; color: #1f2937;">${formatDate(evento.fecha_fin)}</div></div>`
        : '';

      const precio = formatPrice(evento.precio_base)
        ? `<div style="font-size: 1.5rem; font-weight: 700; color: #667eea; margin-bottom: 1rem;">${formatPrice(evento.precio_base)}</div>`
        : '';

      const estadoColor = evento.activo ? '#10b981' : '#ef4444';
      const estadoLabel = evento.activo ? 'OK Inscripciones abiertas' : '* Inscripciones cerradas';

      return `
        <div style="background: white; border-radius: 0.75rem; overflow: hidden; box-shadow: 0 4px 6px rgba(0,0,0,0.1); transition: transform 0.2s;">
          <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 1.5rem; color: white;">
            <h3 style="margin: 0 0 0.5rem 0; font-size: 1.5rem;">${evento.nombre}</h3>
            <span style="background: rgba(255,255,255,0.2); padding: 0.25rem 0.75rem; border-radius: 1rem; font-size: 0.875rem; display: inline-block;">${evento.tipo}</span>
          </div>
          <div style="padding: 1.5rem;">
            ${descripcion}
            <div style="display: flex; gap: 1rem; margin-bottom: 1rem; flex-wrap: wrap;">${inicio}${fin}</div>
            ${precio}
            <div style="margin-top: 1rem; padding-top: 1rem; border-top: 1px solid #e5e7eb;">
              <div style="color: ${estadoColor}; font-weight: 600; font-size: 0.875rem;">${estadoLabel}</div>
            </div>
          </div>
        </div>
      `;
    }

    async function loadEventos() {
      const container = document.getElementById('eventosContainer');
      const loading = document.getElementById('loadingEventos');
      if (!container || !loading) return;

      try {
        const response = await fetch(`${API_URL}/api/public/eventos`);
        if (!response.ok) {
          throw new Error('Error al cargar eventos');
        }

        const data = await response.json();
        loading.style.display = 'none';

        if (data.data && data.data.length > 0) {
          container.innerHTML = data.data.map((evento: any) => buildEventCard(evento)).join('');
        } else {
          container.innerHTML = '<p style="text-align: center; color: #6b7280; grid-column: 1/-1;">No hay eventos disponibles en este momento</p>';
        }
      } catch (error) {
        loading.style.display = 'none';
        container.innerHTML = '<p style="text-align: center; color: #ef4444; grid-column: 1/-1;">Error al cargar eventos. Por favor, intenta más tarde.</p>';
      }
    }

    loadEventos();
  </script>
</Layout>
