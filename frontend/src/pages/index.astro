        </div>

      </div>
    </div>
  </section>

  <!-- Eventos Section -->
  <section id="eventos" style="padding: 4rem 2rem; background: #f9fafb;">
    <div style="max-width: 1200px; margin: 0 auto;">
      <h2 style="text-align: center; font-size: 2rem; margin-bottom: 3rem; color: #1f2937;">Eventos Disponibles</h2>
      <div id="eventosContainer" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 2rem;">
        <!-- Se llena con JavaScript -->
      </div>
      <div id="loadingEventos" style="text-align: center; padding: 3rem;">
        <p style="color: #6b7280;">Cargando eventos...</p>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer style="background: #1f2937; color: white; padding: 2rem; text-align: center;">
    <p>&copy; 2026 ParoikiApp - Sistema de gesti√≥n de eventos juveniles</p>
  </footer>

  <script>
    const API_URL = 'http://localhost:3001';

    async function loadEventos() {
      const container = document.getElementById('eventosContainer');
      const loading = document.getElementById('loadingEventos');

      try {
        const response = await fetch(`${API_URL}/api/public/eventos`);
        
        if (!response.ok) {
          throw new Error('Error al cargar eventos');
        }

        const data = await response.json();
        loading.style.display = 'none';

        if (data.data && data.data.length > 0) {
          container.innerHTML = data.data.map(evento => `
            <div style="background: white; border-radius: 0.75rem; overflow: hidden; box-shadow: 0 4px 6px rgba(0,0,0,0.1); transition: transform 0.2s;">
              <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 1.5rem; color: white;">
                <h3 style="margin: 0 0 0.5rem 0; font-size: 1.5rem;">${evento.nombre}</h3>
                <span style="background: rgba(255,255,255,0.2); padding: 0.25rem 0.75rem; border-radius: 1rem; font-size: 0.875rem; display: inline-block;">
                  ${evento.tipo}
                </span>
              </div>
              <div style="padding: 1.5rem;">
                ${evento.descripcion ? `<p style="color: #6b7280; margin-bottom: 1rem;">${evento.descripcion}</p>` : ''}
                
                <div style="display: flex; gap: 1rem; margin-bottom: 1rem; flex-wrap: wrap;">
                  ${evento.fecha_inicio ? `
                    <div style="flex: 1; min-width: 120px;">
                      <div style="font-size: 0.875rem; color: #9ca3af;">Inicio</div>
                      <div style="font-weight: 600; color: #1f2937;">${new Date(evento.fecha_inicio).toLocaleDateString('es-ES')}</div>
                    </div>
                  ` : ''}
                  ${evento.fecha_fin ? `
                    <div style="flex: 1; min-width: 120px;">
                      <div style="font-size: 0.875rem; color: #9ca3af;">Fin</div>
                      <div style="font-weight: 600; color: #1f2937;">${new Date(evento.fecha_fin).toLocaleDateString('es-ES')}</div>
                    </div>
                  ` : ''}
                </div>

                ${evento.precio_base ? `
                  <div style="font-size: 1.5rem; font-weight: 700; color: #667eea; margin-bottom: 1rem;">
                    ‚Ç¨${parseFloat(evento.precio_base).toFixed(2)}
                  </div>
                ` : ''}

                <div style="margin-top: 1rem; padding-top: 1rem; border-top: 1px solid #e5e7eb;">
                  <div style="color: ${evento.activo ? '#10b981' : '#ef4444'}; font-weight: 600; font-size: 0.875rem;">
                    ${evento.activo ? 'OK Inscripciones abiertas' : '* Inscripciones cerradas'}
                  </div>
                </div>
              </div>
            </div>
          `).join('');
        } else {
          container.innerHTML = '<p style="text-align: center; color: #6b7280; grid-column: 1/-1;">No hay eventos disponibles en este momento</p>';
        }

      } catch (error) {
        console.error('Error loading eventos:', error);
        loading.style.display = 'none';
        container.innerHTML = '<p style="text-align: center; color: #ef4444; grid-column: 1/-1;">Error al cargar eventos. Por favor, intenta m√°s tarde.</p>';
      }
    }

    // Cargar eventos al iniciar
    loadEventos();
  </script>
</Layout>
